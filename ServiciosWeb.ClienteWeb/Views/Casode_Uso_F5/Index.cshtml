
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="style.css">
</head>

<body>

    <main class="container">
        <form action="" method="post" class="my-5">
            <h1>Post a Job </h1>

            <div class="mb-3  w-75">
                <label class="form-label" for="categoria">Categoria</label>
                <select class="form-select" aria-label="Default select example" name="categoria" id="categoria">
                    <option value="1">Diseño web</option>
                    <option value="1">Diseño web</option>
                    <option value="1">Diseño web</option>
                    <option value="1">Diseño web</option>
                </select>
            </div>

            <!-- Radio button -->
            <div class="mb-3 ">
                <label class="form-label" for="categoria"> Tipo: </label>
                <input class="form-check-input" type="radio" name="type" id="fulltime">
                <label class="form-check-label" class="form-check-input" for="fulltime"> Full Time </label>

                <input class="form-check-input" type="radio" name="type" id="partTime" for="tipo">
                <label class="form-check-label" for="fulltime" for="tipo"> Tipo </label>

                <input class="form-check-input" type="radio" name="type" id="freeLance">
                <label class="form-check-label" for="fulltime" for="tipo"> Tipo </label>
            </div>

            <!-- Campo de campañía -->
            <div class="mb-3 w-75">
                <label class="form-label" class="form-label" for="campany"> Compañia </label>
                <input class="form-control" type="text" name="campany" id="campany">
            </div>

            <div class="mb-3  w-75">
                <label class="form-label" for="logo"> Compañia </label>
                <input class="form-control" type="file" name="logo" id="logo">
            </div>

            <div class="mb-3  w-75">
                <label class="form-label" for="URL"> URL </label>
                <input class="form-control" type="text" name="URL" id="URL">
            </div>

            <div class="mb-3  w-75">
                <label class="form-label" for="position"> Position </label>
                <input class="form-control" type="text" name="position" id="position">
            </div>

            <div class="mb-3  w-75">
                <label class="form-label" for="Location"> Ubicacion </label>
                <input class="form-control" type="text" name="Location" id="Location">
            </div>

            <div class="mb-3  w-75">
                <label for="descripcion"> Descripción</label>
                <textarea class="form-control" name="descripcion" id="descripcion" cols="30" rows="10"></textarea>
            </div>

            <div class="d-flex justify-content-between  w-75">
                <input class="btn btn-danger" type="reset" value="Cancelar">
                <input class="btn btn-success" type="submit" value="Enviar">
            </div>
        </form>
    </main>

</body>

</html>

